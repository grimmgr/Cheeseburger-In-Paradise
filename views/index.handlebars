<div class='header'>
  <img class='header-img' src='/assets/images/burger.PNG'/>

  <h1>Cheeseburger In Paradise</h1>
</div>

<div class='form'>
  <form class='create-form'>

    <div class='form-group'>
      <label for='burger'>Place an order:</label>
      <input type='text' id='burger' name='name'>
    </div>

    <button class='submit' type='submit'>Submit</button>
  </form>
</div>

<div class='to-eat'>
  <h2>Order Up!</h2>

  <ul>
    {{#each burgers}}
      {{#unless eaten}}
        {{> burgers/burger-block eaten=false}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class='eaten'>
  <h2>Hall of Fame</h2>

  <ul>
    {{#each burgers}}
      {{#if eaten}}
        {{> burgers/burger-block eaten=true}}
      {{/if}}
    {{/each}}
  </ul>
</div>